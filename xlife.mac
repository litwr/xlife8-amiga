vidmacp macro
         andi.w #$1803,d1
         move.w d1,d2
         andi.w #$fe00,d1
         rol.w #7,d1
         ;lsr.w #1,d1
         ;lsr.w #8,d1
         or.b d1,d2

         swap d1
	 andi.w #$C018,d1
         move.w d1,d3
         add.b d1,d1
         lsr.w #8,d3
         or.b d1,d3
         or.b d2,d3
         move.b d3,d1
         and.b d0,d1   ;for plane #1
         not.b d3
         and.b d3,d0   ;for plane #2
endm

genmac macro
	 moveq #0,d1			;;xor bx,bx
	 move.b (count\1+3,a4),d1	;;mov bl,[si+count#one+3]
	 move.b (a2,d1),d0		;;mov al,[bx+gentab]
         andi.w #3,d0			;;and ax,3

         move.b (count\1+2,a4),d1	;;mov bl,[si+count#one+2]
	 move.b (a2,d1),d1		;;mov bl,[bx+gentab]
	 andi.b #$c,d1			;;and bl,0ch

	 or.b d1,d0			;;or al,bl
         move.b (count\1+1,a4),d1	;;mov bl,[si+count#one+1]
	 move.b (a2,d1),d1		;;mov bl,[bx+gentab]
	 andi.b #$30,d1			;;and bl,30h
	 or.b d1,d0			;;or al,bl

         move.b (count\1,a4),d1		;;mov bl,[si+count#one]
         move.b (a2,d1),d1		;;mov bl,[bx+gentab]		;;movb gentab(r5),r5
         andi.b #$c0,d1			;;and bl,0c0h			;;bic #^B1111111100111111,r5
	 or.b d1,d0			;;or al,bl			;;bis r5,r1

         move.b d0,(\1,a4)		;;mov [si+one],al		;;movb r1,one(r0)
         				;;mov bx,tab3
         				;;xlatb				;;movb tab3(r1),r2
         beq .\@			;;or al,al
					;;jz @f

	 move.b (a0,d0),d0
         move.b d0,(sum,a4)		;;mov [si+sum],al		;;movb r2,sum(r0)
         cmpi.b #2,mode(a3)		;;cmp [mode],2			;;cmpb #2,@#mode
         beq .\@			;;jz @f

         cellsum			;;cellsum @f
.\@:					;;@@:
endm

cellsum macro  ;in: d0		;;macro cellsum l1 {  ;in: al
	 lea cellcnt+3(a3),a1		;;mov bx,cellcnt+4
	 move.b -(a1),d1
         move #0,CCR
	 abcd d0,d1			;;add al,[bx]
	            			;;aaa
	 bcc .\@			;;jnc l1

	 move.b d1,(a1)	
	 moveq #0,d0
         incbcd .\@			;;incbcd l1
	 move.b -(a1),d1
	 abcd d0,d1
.\@:	 move.b d1,(a1)		
endm

incbcd macro				;;macro incbcd l1 {
	 				;;dec bx
	 move.b -(a1),d1		;;mov al,[bx]
	 abcd d0,d1			;;adc al,0
					;;aaa
	 	        		;;mov [bx],al
	 bcc \1				;;jnc l1
	 move.b d1,(a1)
endm

inibcd macro
	 lea \1(a3),a1
         moveq #\2-1,d0
.\@:	 move.b #0,(a1)+
         dbra d0,.\@
endm

setcount macro
         move.w (\1,a4),d1		;;mov bx,[si+one]
	 move.w d1,d5			;;mov di,bx
	 and.w d2,d1			;;and bx,cx
	 move.b d1,(count\1+4,a4)	;;mov [si+count#one],bl
         lsr.w #8,d1
         move.b d1,(count\1,a4)		;;mov [si+count#one+4],bh
	 move.w d5,d1			;;mov bx,di
	 and.w d3,d1			;;and bx,dx
         lsr.w #1,d1			;;shr bx,1
	 move.b d1,(count\1+5,a4)	;;mov [si+count#one+1],bl
         lsr.w #8,d1
         move.b d1,(count\1+1,a4)	;;mov [si+count#one+5],bh
	 move.w d5,d1			;;mov bx,di
	 and.w d6,d1			;;and bx,bp
         add.w d1,d1			;;shl bx,1
	 move.b d1,(count\1+6,a4)	;;mov [si+count#one+2],bl
         lsr.w #8,d1
         move.b d1,(count\1+2,a4)	;;mov [si+count#one+6],bh
	 move.w d5,d1			;;mov bx,di
	 and.w d0,d1			;;and bx,ax
	 move.b d1,(count\1+7,a4)	;;mov [si+count#one+3],bl
         lsr.w #8,d1
         move.b d1,(count\1+3,a4)	;;mov [si+count#one+7],bh
endm

